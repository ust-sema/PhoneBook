@model PhoneBook.Models.Person

@{
    Layout = null;
}

<img src="@Model.LargePicture" class="card-img-top px-5 py-5" alt="...">
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title @Model.FirstName @Model.LastName</h5>
    </div>
    <ul class="list-group">
        <li class="list-group-item"><span class="font-weight-bold">Телефон:</span> @Model.Phone</li>
        <li class="list-group-item"><span class="font-weight-bold">Email:</span> @Model.Email</li>
    </ul>
</div>
