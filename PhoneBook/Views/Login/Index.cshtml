@model PhoneBook.Models.LoginViewModel

<div class="container-fluid justify-content-center">
    <div class="row justify-content-center">
        <div class="card my-5 mx-5">
            <div class="card-header">
                Авторизация
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true);
                    @Html.AntiForgeryToken();
                    <div class="form-group">
                        <input type="text" class="form-control" id="Username" name="Username" placeholder="Пользователь">
                    </div>
                    <div class="form-group">
                        <input id="Password" name="Password" type="password" class="form-control" placeholder="Пароль">
                    </div>
                    if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @Html.Raw(ViewBag.Error)
                        </div>
                    }
                    <a href='@Url.Action("Index","Home")' class="btn btn-light">Отмена</a>
                    <button type="submit" class="btn btn-primary float-right">Вход</button>
                }
            </div>
        </div>
    </div>
</div>

@section PageScripts{}